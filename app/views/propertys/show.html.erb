<p id="notice"><%= notice %></p>

<p class="field">
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p class="field">
  <strong>家賃：</strong>
  <%= @property.rent %>円
</p>

<p class="field">
  <strong>物件住所：</strong>
  <%= @property.address %>
</p>

<p class="field">
  <strong>築年数：</strong>
  <%= @property.age %>年
</p>

<p class="field">
  <strong>備考：</strong>
  <%= @property.remarks %>
</p>

<% @property.stations.each_with_index do |station, i| %>


  <h3>最寄り駅<%= i + 1 %></h3>

  <p>
    <strong>路線名：</strong>
    <%= station.route %>
  </p>

  <p>
    <strong>駅名：</strong>
    <%= station.name %>
  </p>

  <p>
    <strong>徒歩分数：</strong>
    <%= station.time %>
  </p>
<% end %>

<%= link_to '編集する', edit_property_path(@property.id) %>
<%= link_to '戻る', propertys_path %>
